<div class="col-md-4" id="beer-card">
    <div class="on-card-img">
        <img id="beer-img" src="{{ image_url }}" alt="beer_{{name}}" />
    </div>
    <div class="card-body">
        <h5 class="b-name">{{ name }}</h5>
        <h4 class="b-tagline">{{ tagline }}</h4>
        <p class="card-text">{{ description }}</p>
    </div>
</div>